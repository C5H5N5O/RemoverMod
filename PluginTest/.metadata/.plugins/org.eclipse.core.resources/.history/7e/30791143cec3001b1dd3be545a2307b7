package get_xyz.main;


//import java.sql.SQLException;
//import java.util.logging.Logger;

import org.bukkit.plugin.java.JavaPlugin;
import org.bukkit.scheduler.BukkitScheduler;

import java.sql.SQLException;
import java.util.logging.Logger;

import org.bukkit.Bukkit;

import org.bukkit.entity.Player;


public class GetXYZ extends JavaPlugin{
	
	
	DataBase DB = new DataBase();
	
	@Override
	public void onEnable() {
		
		BukkitScheduler scheduler = getServer().getScheduler();
		
		
		try {
			DB.Connect();
			DB.CreatPlayerTable();
			getLogger().info("va");
		} catch (ClassNotFoundException e) {
			getLogger().info("fuck");
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} 
		
		
        scheduler.scheduleSyncRepeatingTask(this, new Runnable() {
            @Override
            public void run() {
	            for (Player p : Bukkit.getOnlinePlayers()) {
	            	
	            	getLogger().info("υσι");
	            	
	            	try {	
	            	
	            	getLogger().info(p.getName());
	            	getLogger().info(String.valueOf(p.getLocation().getBlockX()));
	            	getLogger().info(String.valueOf(p.getLocation().getBlockZ()));
	            		
	            	DB.WritePlayerLocation(p.getName(), p.getLocation().getBlockX(), p.getLocation().getBlockZ());
	            		
					} catch (SQLException e) {getLogger().info("fuck");e.printStackTrace(); }
	            	
	            }
            }
        }, 0L, 100L);

	}
	
	
	
	@Override
	public void onDisable() {
		
	}
}
